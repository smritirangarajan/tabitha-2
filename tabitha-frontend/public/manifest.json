{
  "manifest_version": 3,
  "name": "Smart History Search",
  "version": "1.0",
  "description": "Use natural language to find and summarize past pages",
  "permissions": ["history", "storage"],
  "host_permissions": ["http://localhost:5000/"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
